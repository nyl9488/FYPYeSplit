
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:orientation= "vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/cardview_dark_background"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:textColor="@color/MediumAquamarine"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Find your account."

            android:layout_marginBottom="30dp"
            android:id="@+id/textView7" />


    <TextView android:text="Step 1. Enter your email address." android:layout_width="wrap_content"
        android:textColor="@color/White"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:focusable="true" />

    <EditText
        android:layout_height="35dp"
        android:layout_width="match_parent"

        android:background="@drawable/button"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="15dp"
        />

        <TextView android:text="Step 2.Enter your username." android:layout_width="wrap_content"
            android:textColor="@color/White"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/txtForUsername"
            android:focusable="true" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/button"
            android:id="@+id/edForUsername"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 3. We will send confirmation message to your email to verify."
        android:id="@+id/textView2"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/button"
            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            />
    </LinearLayout>

